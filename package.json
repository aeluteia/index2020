{
  "private": true,
  "name": "smoking-heaps",
  "version": "0.1.0",
  "scripts": {
    "build": "next build",
    "build-storybook": "build-storybook",
    "dev": "next dev",
    "fix": "yarn lint --fix",
    "lint": "eslint . --cache --ext ts --ext tsx --ext js",
    "preprod": "yarn verify && yarn build",
    "prod": "next export",
    "start": "next start",
    "storybook": "start-storybook -p 6006",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check -w",
    "verify": "yarn lint && yarn type-check"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "@types/d3-scale": "^3.2.0",
    "@types/d3-shape": "^2.0.0",
    "clsx": "^1.1.1",
    "d3": "^6.2.0",
    "d3-shape": "^2.0.0",
    "gray-matter": "^4.0.2",
    "next": "9.5.5",
    "react": "16.14.0",
    "react-dom": "16.14.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.1",
    "@storybook/addon-actions": "^6.0.26",
    "@storybook/addon-links": "^6.0.26",
    "@storybook/addons": "^6.0.26",
    "@storybook/react": "^6.0.26",
    "@types/d3": "^5.16.3",
    "@types/node": "^14.11.9",
    "@types/react": "^16.9.52",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.1.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-typescript": "^11.0.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-unicorn": "^22.0.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.1",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.1.2",
    "prettier-package-json": "^2.1.3",
    "react-docgen-typescript-loader": "^3.7.2",
    "tailwindcss": "^1.9.3",
    "tailwindcss-debug-screens": "^1.1.0",
    "typescript": "^4.0.3",
    "typescript-language-server": "^0.4.0"
  },
  "browserslist": [
    ">0.3%",
    "not ie 11",
    "not dead",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "! git rev-parse --abbrev-ref HEAD | grep -q master || (yarn verify && lint-staged)"
    }
  },
  "lint-staged": {
    "*.@(json|rc)": [
      "prettier --parser json --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ],
    "*.@(js|ts|tsx)": [
      "yarn fix"
    ]
  }
}
